# Django Backend Development Configuration
DEBUG=1
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend,frontend
DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes (relaxed for dev)
TEMP_DIR=temp/

# Processing Limits (disabled/relaxed for development)
RATE_LIMITING_ENABLED=0
MAX_CONCURRENT_GENERATIONS=20
MAX_GENERATIONS_PER_HOUR=1000  # Effectively unlimited
MAX_CONCURRENT_PER_IP=50
RATE_LIMIT_REDIS_PREFIX=dev_rate_limit

# Mesh Generation Settings
# Using HMM + Manifold3D for superior performance (100x faster than OpenSCAD)

# Cleanup Settings (less aggressive in dev)
CLEANUP_INTERVAL=1800   # 30 minutes
FILE_RETENTION=7200     # 2 hours

# Development Settings
LOG_LEVEL=DEBUG
CORS_ALLOW_ALL=1
CORS_ALLOW_CREDENTIALS=1
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:5174,http://127.0.0.1:3000

# Security Features (disabled for development)
CSRF_COOKIE_SECURE=0
SESSION_COOKIE_SECURE=0
SECURE_SSL_REDIRECT=0
SECURE_BROWSER_XSS_FILTER=0
SECURE_CONTENT_TYPE_NOSNIFF=0
SECURE_HSTS_SECONDS=0

# Development Features
DEV_TOOLBAR_ENABLED=1
SQL_DEBUG=1
ENABLE_PROFILING=1
DISABLE_CACHE=1

# Error Handling (verbose for dev)
SHOW_ERROR_DETAILS=1
LOG_SQL_QUERIES=1