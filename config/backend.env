# Django Backend Production Configuration
DEBUG=0
SECRET_KEY=change-this-in-production-with-secure-random-key
ALLOWED_HOSTS=coin-maker.example.com,localhost
DATABASE_URL=sqlite:///app/data/db.sqlite3

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Task Queue Configuration (use Celery for production by default)
USE_CELERY=1

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
TEMP_DIR=/app/temp/

# Processing Limits (production)
RATE_LIMITING_ENABLED=1
MAX_CONCURRENT_GENERATIONS=3
MAX_GENERATIONS_PER_HOUR=20
MAX_CONCURRENT_PER_IP=2
RATE_LIMIT_REDIS_PREFIX=prod_rate_limit

# Mesh Generation Settings
# Using HMM + Manifold3D for superior performance (100x faster than OpenSCAD)

# Cleanup Settings
CLEANUP_INTERVAL=300   # 5 minutes
FILE_RETENTION=1800    # 30 minutes
MAX_STORAGE_SIZE=1073741824  # 1GB total storage limit

# Production Settings
LOG_LEVEL=INFO
CORS_ALLOW_ALL=0
CORS_ALLOW_CREDENTIALS=0
CORS_ALLOWED_ORIGINS=https://coin-maker.example.com

# Security Features (enabled for production)
CSRF_COOKIE_SECURE=1
SESSION_COOKIE_SECURE=1
SECURE_SSL_REDIRECT=1
SECURE_BROWSER_XSS_FILTER=1
SECURE_CONTENT_TYPE_NOSNIFF=1
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_FRAME_DENY=1
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# Production Performance
USE_REDIS_CACHE=1
CACHE_TIMEOUT=3600
COMPRESS_ENABLED=1
GZIP_ENABLED=1

# Production Monitoring
ENABLE_METRICS=1
LOG_TO_FILE=1
LOG_FILE_PATH=/app/logs/app.log
ERROR_REPORTING=1

# Production Features (disabled)
DEV_TOOLBAR_ENABLED=0
SQL_DEBUG=0
ENABLE_PROFILING=0
SHOW_ERROR_DETAILS=0
LOG_SQL_QUERIES=0