# SvelteKit Frontend Development Configuration
NODE_ENV=development
PUBLIC_API_BASE_URL=http://localhost:8000/api

# Image Processing Settings
VITE_MAX_IMAGE_SIZE=52428800  # 50MB in bytes
VITE_SUPPORTED_FORMATS=image/png,image/jpeg,image/gif,image/bmp,image/tiff

# UI Settings
VITE_AUTO_PREVIEW_UPDATE=true
VITE_DEBOUNCE_DELAY=300  # ms for parameter change debouncing
VITE_ENABLE_DRAG_DROP=true

# Image Processing Configuration
VITE_PHOTON_WASM_ENABLED=true
VITE_CANVAS_FALLBACK_ENABLED=true

# STL Viewer Settings
VITE_STL_VIEWER_LIGHTING=true
VITE_STL_GRID_ENABLED=true
VITE_AUTO_ROTATE_DEFAULT=false

# Development Settings
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_HOT_RELOAD=true
VITE_DEV_SOURCEMAP=true

# Build Settings (for dev builds)
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_BUILD_WATCH=true

# Debug Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_SHOW_PERFORMANCE_METRICS=true