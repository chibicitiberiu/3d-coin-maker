# Frontend Base Configuration - Shared Settings
# These settings are common across all environments

# Image Processing Settings (shared)
VITE_MAX_IMAGE_SIZE=52428800  # 50MB in bytes
VITE_SUPPORTED_FORMATS=image/png,image/jpeg,image/gif,image/bmp,image/tiff

# UI Settings (shared)
VITE_AUTO_PREVIEW_UPDATE=true
VITE_DEBOUNCE_DELAY=300  # ms for parameter change debouncing
VITE_ENABLE_DRAG_DROP=true

# Image Processing Configuration (shared)
VITE_PHOTON_WASM_ENABLED=true
VITE_CANVAS_FALLBACK_ENABLED=true

# STL Viewer Settings (shared)
VITE_STL_VIEWER_LIGHTING=true
VITE_STL_GRID_ENABLED=true
VITE_AUTO_ROTATE_DEFAULT=false

# Build Settings (shared base)
VITE_BUILD_WATCH=true